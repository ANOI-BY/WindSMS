<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="SplashTheme" parent="Theme.SMSSorter">
        <item name="android:windowBackground">@drawable/splash</item>
    </style>


    <style name="TimeBlock">

        <item name="android:textColor">@color/light_time_text</item>
        <item name="android:textSize">12sp</item>
        <item name="fontFamily">@font/lato</item>
        <item name="android:textFontWeight">400</item>

    </style>

    <style name="DefaultText">
        
        <item name="android:textFontWeight">600</item>
        <item name="android:textSize">14sp</item>
        <item name="fontFamily">@font/nunito</item>
        <item name="android:textColor">@color/text_color</item>

        
    </style>


    <style name="AvatarText">

        <item name="android:textColor">@color/white</item>
        <item name="android:textFontWeight">800</item>
        <item name="android:textSize">24sp</item>
        <item name="fontFamily">@font/lato</item>

    </style>

    <style name="ContactName">

        <item name="android:textFontWeight">700</item>
        <item name="android:textSize">18sp</item>
        <item name="fontFamily">@font/lato</item>
        <item name="android:textColor">@color/light_contact_name</item>

    </style>

    <style name="TopContactName">

        <item name="fontFamily">@font/lato</item>
        <item name="android:textFontWeight">700</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/light_contact_name</item>

    </style>

    <style name="MessageText">

        <item name="fontFamily">@font/open_sans</item>
        <item name="android:textFontWeight">600</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/light_contact_name</item>

    </style>


    <style name="MessageEditText">

        <item name="android:textColorHint">@color/light_message_edit_text</item>
        <item name="fontFamily">@font/open_sans</item>
        <item name="android:textFontWeight">600</item>
        <item name="android:textSize">14sp</item>

    </style>

    <style name="WelcomeText">

        <item name="fontFamily">@font/open_sans</item>
        <item name="android:textFontWeight">700</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/accent</item>
        <item name="android:gravity">center</item>

    </style>

    <style name="WelcomeWarningText">

        <item name="android:textFontWeight">600</item>
        <item name="fontFamily">@font/open_sans</item>
        <item name="android:textSize">16sp</item>
        <item name="android:gravity">center</item>

    </style>

    <style name="WelcomeCheckBoxText">

        <item name="android:textFontWeight">600</item>
        <item name="fontFamily">@font/open_sans</item>
        <item name="android:textSize">14sp</item>

    </style>

    <style name="StandartText">

        <item name="fontFamily">@font/open_sans</item>
        <item name="android:textFontWeight">700</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/light_contact_name</item>

    </style>

</resources>