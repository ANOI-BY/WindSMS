<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <androidx.cardview.widget.CardView
        android:id="@+id/message_left_text_block"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/message_left_icon_color"
        android:layout_marginStart="12dp"
        app:cardCornerRadius="20dp"
        app:cardBackgroundColor="@color/white"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="54dp"
        android:layout_marginBottom="15dp"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/message_left_msg_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="test"
                android:layout_marginTop="15dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentStart="true"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="19dp"
                android:layout_marginBottom="15dp"
                android:fontFamily="@font/nunito_light"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:gravity="left"
                android:linksClickable="true"
                android:autoLink="all"
                android:textIsSelectable="true"
                />
        </RelativeLayout>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_alignParentStart="true"
        android:layout_marginStart="21dp"
        android:id="@+id/message_left_icon_color"
        android:layout_width="40dp"
        android:layout_height="40dp"
        app:cardCornerRadius="360dp"
        android:layout_alignBottom="@id/message_left_text_block"
        app:cardBackgroundColor="#FFB64B"
        >

        <TextView
            android:id="@+id/message_left_icon_letter"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Ð”"
            android:gravity="center"
            android:textSize="20sp"
            android:textColor="@color/white"
            android:fontFamily="@font/nunito_bold"
            android:paddingBottom="4dp"/>

    </androidx.cardview.widget.CardView>

</RelativeLayout>