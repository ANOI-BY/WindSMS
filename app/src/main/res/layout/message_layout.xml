<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginBottom="23dp">


    <androidx.cardview.widget.CardView
        android:id="@+id/card_view_msg"
        android:layout_width="40dp"
        android:layout_height="40dp"
        app:cardBackgroundColor="#C1C9FF"
        app:cardCornerRadius="360dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="14dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/first_letter_msg_avatar"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="М"
                android:textSize="20sp"
                android:textColor="@color/white"
                android:fontFamily="@font/nunito_bold"
                />

        </RelativeLayout>

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/message_sender_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/card_view_msg"
        android:layout_marginStart="8dp"
        android:text="Папа"
        android:textSize="17sp"
        android:gravity="center"
        android:textColor="@color/black"
        android:fontFamily="@font/nunito_bold"
        android:textFontWeight="1000"
        android:textStyle="bold"
        />

    <TextView
        android:id="@+id/message_sender_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/card_view_msg"
        android:layout_below="@id/message_sender_name"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="6dp"
        android:layout_marginStart="8dp"
        android:text="wf fw fw адца ЛВБ х"
        android:textColor="@color/black"
        android:fontFamily="@font/nunito"
        android:textSize="13sp"
        android:maxLines="3"

        />

    <TextView
        android:visibility="gone"
        android:id="@+id/not_found_msg"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:text="TEST"
        android:gravity="center"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:fontFamily="@font/nunito_bold"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:layout_marginTop="12dp"
        />

    <TextView
        android:id="@+id/message_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="16dp"
        style="@style/TimeBlock"
        />
</RelativeLayout>